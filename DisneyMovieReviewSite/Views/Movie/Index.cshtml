@model IEnumerable<DisneyMovieReviewSite.Models.Movie>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/Styles/Main.css" />
    <link rel="stylesheet" href="~/Styles/MovieIndex.css" />
</head>
<body>

    <!-- NavBar -->
    <nav id="navbar">
        <ul>
            <li><a href="/Home">HOME</a></li>
            <li><a href="/Movie">MOVIES</a></li>
        </ul>
    </nav>

    <h1>Disney Movies</h1>
    <div class = "movies-container">
        <ul>

        @foreach (var movie in Model)
        {
                <li>
                    <div class="movie-container">
                        <img id="image" src="@movie.ImgPath" />
                        <a href="/Movie/Details/@movie.ID">@movie.Name</a>
                        <p>@movie.ReleaseYear <br>
                        @movie.Rating out of 5 Stars</p>
                    </div>
                </li>           
        }
        </ul> 

    </div>
</body>
</html>
